{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "inlineSources": true,
    "noUnusedLocals": true,
    "declaration": true,
    "removeComments": false
  },
  "exclude": [
    "**/__stories__/*",
    "**/__tests__/*",
    "**/__mocks__/*",
    "src/storybook/*",
    "scripts/**/*"
  ]
}
